{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types/",
            "./src/types/"
        ]
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ]
}